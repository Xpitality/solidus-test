<header id="header" class="sticky" data-hook>
  <%= content_tag :div, class: "header-top-bar" do -%>
    <%= image_tag("icons/icon-delivery.svg") %>
    <%= content_tag :p, "in tutta Italia consegna a casa tua in 96 ore", class: "exceptSmallScreen" %>
    <%= content_tag :p, "consegna a casa tua in 96 ore", class: "smallScreen" %>
  <% end -%>
  <%= content_tag :div, class: "header-content" do -%>
    <figure id="logo" data-hook><%= logo %></figure>
    <div class="header-right">
      <%= render partial: 'spree/shared/header/nav_bar' %>
      <div class="header-actions">
        <div id="search-bar" data-hook>
          <%= render partial: 'spree/shared/header/search' %>
        </div>
        <%= render partial: 'spree/shared/header/user_nav' %>
        <%= render partial: 'spree/shared/header/main_nav_bar' %>
        <div class="hamburger">
          <span></span>
        </div>
      </div>
    </div>
  <% end -%>
</header>
