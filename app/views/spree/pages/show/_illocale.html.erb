<div class="illocale">
    <div class="who-we-are-background"></div>
    <div class="container">
      <h1 class="title">
        <% if with_widget %>
          <%= t("store.shared.main_menu.label.locale") %>
        <% else %>
          <%= t("store.home.who_we_are.title") %>
        <% end %>
      </h1>
      <h3 class="subtitle"><%= t("store.home.who_we_are.subtitle") %></h3>
    
      <div class="content-holder">
        <div class="content-top">
          <div class="col col-left">
            <div class="img-holder">
              <%= image_tag("home/who-we-are/who-we-are.png") %>
            </div>
            <div class="text-holder">
              <p class="text"><%= t("store.home.who_we_are.text") %></p>
            </div>
          </div>
          <div class="col col-right">
            <h2><%= t('store.shared.footer.info.contacts') %></h2>
            <% if store_phone %>
            <p class="phone"><%== t('store.shared.footer.contact.phone_number', phone: store_phone) %></p>
            <% end %>
            <p><%= t("store.home.who_we_are.write_as") %></p>
            <div class="social">
              <% if store_instagram %>
                <%= link_to store_instagram, target: :_blank do %>
                <%= image_tag("icons/social/icon-instagram-white.svg") %>
              <% end %>
              <% end %>
              <% if store_facebook %>
                <%= link_to store_facebook, target: :_blank do %>
                <%= image_tag("icons/social/icon-facebook-white.svg") %>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <% if with_widget %>
        <div class="content-bottom">
          <div class="title-holder">
            <h1 class="title"><%= t("store.home.follow_us.title") %></h1>
            <% if store_instagram %>
              <%= link_to store_instagram, target: :_blank do %>
                <%= image_tag("icons/social/icon-instagram-black.svg") %>
              <% end %>
            <% end %>
            <% if store_facebook %>
              <%= link_to store_facebook, target: :_blank do %>
                <%= image_tag("icons/social/icon-facebook-black.svg") %>
              <% end %>
            <% end %>
          </div>
            <%= render partial: "spree/shared/widget" %>
        </div>
        <% end %>
      </div>
      <% if with_widget %>
        <% if store_instagram %>
          <%= link_to t("store.home.follow_us.button"), store_instagram, class: "btn btn-dark-transparent", target: :_blank %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>