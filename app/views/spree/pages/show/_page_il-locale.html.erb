<%= render partial: "spree/shared/breadcrumbs", locals: { name: t("store.shared.main_menu.label.locale") } %>

<div class="illocale">
  <div class="container">
    <h1 class="title">
      <%= t("store.shared.main_menu.label.locale") %>
    </h1>
    <h3 class="subtitle"><%== t("store.home.who_we_are.title_illocale") %></h3>

    <div class="content-holder">
      <div class="who-we-are-background-locale"></div>
      <div class="content-top">
        <div class="col col-left">
          <div class="img-holder">
            <%= image_tag("home/illocale.jpg") %>
          </div>
          <div class="text-holder">
            <p class="text"><%= t("store.home.who_we_are.text_illocale") %></p>
          </div>
        </div>
        <div class="col col-right locale">
          <h2><%= t("store.shared.footer.info.contacts") %></h2>
          <% if store_phone %>
            <p class="phone"><%== t("store.shared.footer.contact.phone_number", phone: store_phone) %></p>
          <% end %>
          <p>
            <%= t("store.shared.footer.contact.write_us") %>
            <% if store_email2 %>
              <a class="info-mail" href="mailto:<%= store_email2 %>"><%= store_email2 %></a>
            <% end %>

            <br>
            <%= t("store.home.who_we_are.write_as") %>
            <% if store_instagram %>
              <%= link_to "@#{store_instagram.to_s.split("/").last}", store_instagram %>
            <% end %>
          </p>
          <div class="social">
            <% if store_instagram %>
              <%= link_to store_instagram, target: :_blank do %>
                <%= image_tag("icons/social/icon-instagram-white.svg") %>
              <% end %>
            <% end %>
            <% if store_facebook %>
              <%= link_to store_facebook, target: :_blank do %>
                <%= image_tag("icons/social/icon-facebook-white.svg") %>
              <% end %>
            <% end %>
          </div>

          <div class="emergency">
            <%= image_tag("home/who-we-are/who-we-are-emergency.png") %>
          </div>
        </div>
      </div>

      <div class="content-bottom">
        <div class="title-holder">
          <h1 class="title"><%= t("store.home.follow_us.title") %></h1>
          <% if store_instagram %>
            <%= link_to store_instagram, target: :_blank do %>
              <%= image_tag("icons/social/icon-instagram-black.svg") %>
            <% end %>
          <% end %>
          <% if store_facebook %>
            <%= link_to store_facebook, target: :_blank do %>
              <%= image_tag("icons/social/icon-facebook-black.svg") %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render partial: "spree/shared/widget" %>
    <% if store_instagram %>
      <%= link_to t("store.home.follow_us.button"), store_instagram, class: "btn btn-dark-transparent", target: :_blank %>
    <% end %>
  </div>
</div>