<%= render partial: 'spree/shared/error_messages', locals: { target: @user } %>

<div id="edit-account" class="login">
  <div class="container">
    <div class="col login-col">
      <h1 class="col-title"><%= t('spree.editing_user') %></h1>
      <%= form_for Spree::User.new, as: @user, url: spree.user_path(@user), method: :put do |f| %>
        <%= render partial: 'spree/shared/devise/user_form', locals: { f: f } %>
        <%= f.submit t('spree.update'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>