<div class="cart-modal">
  <div class="cart-item">
    <div class="cart-item-image">
      <%= image_tag("products/product-default.jpg") %>
    </div>
    <div class="item-modal-col">
      <div class="cart-item-info">
        <div class="name">
          <p>Cantina Del Malandrino ''Etienne'' 2019</p>
        </div>
        <div class="price">
          <p>30.00&euro;</p>
        </div>
      </div>
      <div class="controls">
        <button class="btn btn-control-cart">-</button>
        <p>1</p>
        <button class="btn btn-control-cart">+</button>
      </div>
    </div>
    <div class="close-button">
      <%= image_tag("icons/icon-cart-x.svg") %>
    </div>
  </div>
  <div class="cart-modal-info">
    <div class="info-row">
      <p class="info-row-text info">
        <%= t('store.cart.modal.subtotal') %>
      </p>
      <p class="info-row-text price">30,00&euro;</p>
    </div>
    <div class="info-row total">
      <p class="info-row-text info">
        <%= t('store.cart.modal.total') %>
      </p>
      <p class="info-row-text price">30,00&euro;</p>
    </div>
    <%= link_to t('spree.cart'), class:"btn btn-primary btn-to-checkout" do %>
      <%#= spree.cart_path %>
      <%= t('store.cart.modal.button') %>
    <% end %>
  </div>
</div>