<% taxon_new = taxon_by_key(:new) %>
<% products = @searcher.new_products(taxon_new) if taxon_new %>
<% if taxon_new && !products.empty? %>
  <%# cache(cache_key_for_home_products(:new_products)) do %>
    <div class="container">
      <div class="col info-col">
        <%= image_tag("home/featured-collection-background.png") %>
        <h1 class="title"><%= t("store.home.new_products.title") %></h1>
        <h3 class="subtitle"><%= t("store.home.new_products.subtitle") %></h3>
        <p class="text"><%== taxon_new.description %></p>
        <%= link_to t("store.home.new_products.button"), seo_url(taxon_new), class: "btn btn-white-transparent" %>
      </div>
      <div class="col products-col">
        <div class="swiper-section">
          <!-- Slider main container -->
          <div class="swiper-container">
           <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
            <!-- Slides -->
              <% Spree::Product.new_products(taxon_new, limit: 20).each do |product| %>
                <div class="swiper-slide ">
                  <%= render partial: 'spree/shared/product_card', locals: { product: product, css_classes: 'new-product zoom-effect' } %>
                </div>
              <% end %>
            </div>
            <div class="swiper-navigation">
            <!-- If we need navigation buttons -->
              <div class="swiper-button swiper-button-prev">
                <%= image_tag("icons/icon-chevron-left.svg") %>
              </div>
              <div class="swiper-button swiper-button-next">
                <%= image_tag("icons/icon-chevron-right.svg") %>
              </div>
          </div>
         </div>
        </div>
      </div>
    </div>
  <%# end %>
<% end %>