<div class="container">
  <div class="col slider-col">
    <% 2.times do %>
      <div class="product-col">
        <div class="product-card">
          <div class="product-image-holder">
            <%= image_tag("products/product-default.jpg") %>
          </div>
          <div class="product-card-body">
            <div class="body-info">
              <p>Masseria Del Pino ''I Nove Fratelli'' 2018</p>
            </div>
            <div class="body-actions-holder">
              <div class="price">
                <p>90,00&euro;</p>
              </div>
              <div class="body-actions">
                <div class="add-to-cart">
                  <%= image_tag("icons/icon-add-to-cart.svg") %>
                </div>
                <div class="favourite">
                  <%= image_tag("icons/icon-favourite.svg") %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col info-col">
    <%= image_tag("product/from-the-same-region.jpg") %>
    <h1 class="title"><%= t("store.product.slider_and_info.title") %></h1>
    <h3 class="subtitle"><%= t("store.product.slider_and_info.subtitle") %></h3>
    <p class="text"><%= t("store.product.slider_and_info.text") %></p>
    <button class="btn btn-white-transparent align-self-start"><%= t("store.product.slider_and_info.button") %></button>
  </div>
</div>