<div class="product-controls cart-item-quantity">
  <%= item_form.hidden_field :quantity, min: 0, size: 5, max: max_variant_quantity(variant), class: "line_item_quantity quantity-input" %>
  <span class="btn btn-control-cart minus">-</span>
  <p class="quantity-value" data-quantity="<%= line_item.quantity %>" data-max-product-quantity="<%= max_product_quantity(variant) %>"><%= line_item.quantity %></p>
  <span class="btn btn-control-cart plus">+</span>
</div>