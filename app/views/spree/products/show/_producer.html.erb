<div class="producer-cellar">
  <div class="container cellar-top">
    <div class="background-image"></div>
    <div class="col col-left">
      <p class="title"><%= t('store.product.producer.title') %></p>
      <h1 class="title-big"><%= producer.name %></h1>
      <% producer_image = producer.gallery.images.first %>
      <% if producer_image %>
        <%= render('spree/shared/image', image: producer_image, size: :small, itemprop: "image") %>
      <% else %>
        <%= image_tag("producers/default-image.jpg") %>
      <% end %>
    </div>
    <div class="col col-right">
      <% if producer.icon.file? %>
        <%= image_tag(producer.icon.url(:original)) %>
      <% else %>
        <!--<%= producer.name %>-->
      <% end %>
    </div>
  </div>

  <div class="container cellar-bottom">
    <%== producer.description %>
    <div class="taxon-see-more-btn">
      <%= t('store.product.see_more') %>
    </div>
  </div>
</div>