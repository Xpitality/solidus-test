      <%= range_field_tag :price_lte, :id=>"slider1"%>
      <div class="slider-value">
        <div class="slider-value-number" id='hundreds'>
            <ul class="value-holder">
                <% (0..9).to_a.each do |i| %>
                <li><%= i %></li>
                <% end %>
            </ul>
        </div>
        <div class="slider-value-number" id='tenth'>
            <ul class="value-holder">
                <% (0..9).to_a.each do |i| %>
                <li><%= i %></li>
                <% end %>
            </ul>
        </div>
        <div class="slider-value-number" id='ones'>
            <ul class="value-holder">
              <% (0..9).to_a.each do |i| %>
              <li><%= i %></li>
              <% end %>
            </ul>
        </div>
      </div>
