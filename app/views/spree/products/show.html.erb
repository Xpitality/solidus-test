    <div class="product-hero">
      <div class="container">
        <div class="col col-left">
          <div class="product-social">
            <%= link_to "https://www.facebook.com" do %>
              <%= image_tag("icons/icon-facebook-original.svg") %>
            <% end %>
            <%= link_to "https://www.twitter.com" do %>
